---
export interface Props {
  id: string;
  title: string;
  mode: contentMode;
}
var cssClass = 'grid grid-cols-2 gap-2';
export type contentMode = 'PicsInARow' | 'PicsInACol';

const { title, id, mode } = Astro.props;

if (mode === 'PicsInARow') {
  cssClass = 'grid grid-rows-2 gap-2'
}
---

<section
  id={id}
  class="flex scroll-mt-24 flex-col items-center gap-4 space-y-8"
>
  <div class="flex flex-col items-center gap-4">
    <h2
      class="gradient-text text-center font-extrabold tracking-tight text-6xl"
    >
      {title}
    </h2>
  </div>
  <div class={cssClass}>
    <div class="grid gap-2">
      <slot name=picture />
    </div>
    <div class="text-center text-base grid">
      <slot name="text" />
    </div> 
    </div>   
</section>
